{
  "name": "gaze-detection",
  "productName": "Gaze Detection",
  "version": "1.0.0",
  "description": "An application for eye contact detection using webcam",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "electron-forge start",
    "dev": "vite",
    "electron-dev": "node electron-dev.js",
    "build": "vite build && npm run copy-prod-html",
    "copy-prod-html": "node -e \"import('fs').then(fs => fs.copyFileSync('dist/index.prod.html', 'dist/index.html'))\"",
    "preview": "vite preview",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "npm run build && electron-forge publish",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx src/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "build:windows": "node build-config/build-windows.js",
    "package:windows": "cross-env TARGET_PLATFORM=win32 npm run package",
    "make:windows": "cross-env TARGET_PLATFORM=win32 npm run make",
    "verify:windows": "node build-config/verify-build.js win32",
    "generate-icons": "electron-icon-builder --input=./public/app-icon.png --output=./assets"
  },
  "keywords": [],
  "author": {
    "name": "Vincent Peters",
    "email": "me@vincentpeters.be"
  },
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-dmg": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.2.1",
    "asar": "^3.2.0",
    "cross-env": "^7.0.3",
    "electron": "35.0.2",
    "electron-icon-builder": "^2.0.1",
    "electron-vite": "^2.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "terser": "^5.39.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2",
    "vite": "^5.4.14"
  }
}
